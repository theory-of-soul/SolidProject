.stats
	display block
	padding-bottom 40px
	padding-top 40px
	&__title
		font-family MetaPro
		font-size 24px
		line-height 31px
		margin-bottom 20px
	&__text
		font-size 18px
		line-height 27px
		margin-bottom 20px
	&__notes
		font-size 14px
		line-height 21px
		margin-bottom 40px
	&__stat ul
		display flex;
		flex-wrap wrap;
		max-width 100vw
		li
			flex 1 1 50%
			margin-bottom 40px
	&__stat-title
		font-size 36px
		line-height 42px
		margin-bottom 10px
		font-family MetaPro
		color: #660035
		.small
			font-size: 14px;
			line-height 0
	&__stat-describe
		text-transform uppercase
		font-size 12px
		line-height 15px
		letter-spacing 2%
		color #8C8C8C
	@media (min-width: 768px)
		padding-bottom 51px
		padding-top 100px
		&__title
			font-size 36px
			line-height 46px
			margin-bottom 50px
		&__text
			font-size 24px
			line-height 37px
			margin-bottom 30px
		&__notes
			font-size 16px
			line-height 24px
			margin-bottom 43px
		&__stat ul li
			margin-bottom 49px
		&__stat-title
			font-size 52px
			line-height 61px
			.small
				font-size: 26px;
		&__stat-describe
			font-size 13px
			line-height 17px
			max-width: 257px;

	@media (min-width: 1200px)
		display flex
		flex-wrap wrap
		justify-content: center;
		&__title
			flex 1 1 100%
		&__description
			flex 0
			min-width: 378px;
			margin-right: 120px;
		&__stat
			flex 0
			min-width: 500px;



