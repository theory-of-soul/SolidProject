.form
  display none
  position fixed
  width 100vw
  height 100vh
  overflow auto
  text-align center
  top: 0;
  background-color: white;
  z-index 20
  padding-bottom 200px
  p.sent
    display none
  &.sent p.sent
    display: block;
    text-align: center;
    color: #661a36;
  .btn
    width 100%
  &__title
    font-family MetaPro
    font-size 36px
    line-height 46px
    margin-bottom 50px
  &__wrapper
    display block
    max-width: 340px;
    margin 0 auto
  &.show
    display block
  .closeForm
    width 32px
    height 32px
  .header
    position relative
    margin-bottom 50px
    box-shadow none
    .container
      justify-content: space-between;
    &__icon
      flex 0 0 auto

.input-field
  position relative
  text-align: left;
  label
    position: absolute;
    top: .8rem;
    cursor: text;
    left: 0;
    transition: .2s ease-out;
    z-index: 1;
    margin-top: 10px;
    background-color: #fff;
    width: 100%;
    font-size 16px
    line-height 19px
    color rgba(34, 34, 34, 0.65)
    &.focus
      font-size: .8rem;
      transform: translateY(-140%);
  input, textarea
    width 100%
    padding: 12px 0;
    border: none;
    border-bottom: 1px solid #C3BAB3;
    margin-bottom 12px
    &:focus + label
      font-size: .8rem;
      transform: translateY(-140%);
  textarea
    margin-bottom 17px
  &--error input
    border-bottom: 1px solid #D32F2F;
    color #D32F2F




.checkbox
  margin-bottom 20px
  font-size 14px
  line-height 21px
  text-align left
  padding-left: 30px;
  position relative
  label
    color rgba(34, 34, 34, 0.65)
    &:before
      content ''
      display inline-block
      vertical-align top
      border 1px solid #DADADA
      border-radius 2px
      width 18px
      height 18px
      position: absolute;
      left: 0
  input
    display none
    &:checked + label:before
      background-image url('/images/icons/check.svg')


.close
  cursor pointer
a
  text-decoration none