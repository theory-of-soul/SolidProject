.about-risks
  padding 40px 20px
  line-height 21px
  font-size 14px
  &__text
    max-width 661px
    margin-bottom 75px
  ul
    display flex
    flex-wrap wrap
  li
    margin-bottom 50px
    display: flex;
    align-items: center;
    flex: 0 0 100%;
    &:nth-child(1)
      order 1
    &:nth-child(2)
      order 4
    &:nth-child(3)
      order 2
    &:nth-child(4)
      order 4
    &:nth-child(5)
      order 3
    &:nth-child(6)
      order 6
    &:nth-child(7)
      order 3
    img
      margin-right 36px
  @media(min-width 768px) and (max-width 1199px)
    padding 80px 53px
    li p
      max-width: 55%;
  @media(min-width 1200px)
    padding 80px 100px
    font-size 16px
    line-height 24px
    &__text
      margin-bottom 69px
    li
      flex: 0 0 50%;
      padding-right 98px
      &:nth-child(1)
        order 1
      &:nth-child(2)
        order 2
      &:nth-child(3)
        order 3
      &:nth-child(4)
        order 4
      &:nth-child(5)
        order 5
      &:nth-child(6)
        order 6
      &:nth-child(7)
        order 7



