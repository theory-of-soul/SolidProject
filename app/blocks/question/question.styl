    background-image url('/images/background/Egorov.png');
    background-repeat no-repeat
    background-position: 200px 100%;
    padding-bottom 21px
    background-size: 196px;
    position relative
    &:before
      content: '';
      position: absolute;
      left: 40px;
      top: -67px;
      border: 34px solid transparent;
      border-bottom: 34px solid #f6f5f4;
  ul
    font-size 14px
    line-height 16px
    padding-top 40px
    padding-bottom 40px
    border-bottom 1px solid rgba(0, 0, 0, 0.15)
